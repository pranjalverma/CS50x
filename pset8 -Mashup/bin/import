#!/usr/bin/env php
<?php
    
    // require configs
    require(__DIR__ . "/../includes/config.php");
    
    // file path
    $file = $argv[1];
    
    // error checking
    if (file_exists($file) && is_readable($file))
    {
        // open file and error check
        // without perens, first '!==' was checked and as condition was checked, the '=' never happened, making $handle invalid.
        if (($handle = fopen($file, 'r')) !== FALSE)
        {
            // iterating over file
            // careful to use perens properly!
            while (($query = fgetcsv($handle, 1000, "\t")) !== FALSE)
            {
                // query into places
                CS50::query("INSERT INTO places (country_code, postal_code, place_name, admin_name1, admin_code1, admin_name2, admin_code2, admin_name3, 
                            admin_code3, latitude, longitude, accuracy) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)", $query[0], $query[1], $query[2], $query[3], 
                            $query[4], $query[5], $query[6], $query[7], $query[8], $query[9], $query[10], $query[11]);
            }
            
            // close file
            fclose($handle);
        }
    }
?>